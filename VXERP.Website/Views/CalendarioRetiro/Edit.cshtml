@model CRM.Business.Entities.Pedido
@{
  
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm("Edit", "CalendarioRetiro", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Conf_Fecha)
    @Html.HiddenFor(model => model.Conf_Usu)
    @Html.HiddenFor(model => model.Cuit)
    @Html.HiddenFor(model => model.Fe_Ped)
    @Html.HiddenFor(model => model.Observaciones)
    @Html.HiddenFor(model => model.Estado)
    @Html.HiddenFor(model => model.FechaActualizacion)
    @Html.HiddenFor(model => model.FechaCreacion)
    @Html.HiddenFor(model => model.idUsuario)
    <div class="wrapper">

        <div class="container-fluid">
            <div id="heading" class="page-header">
                <h1><i class="icon20 i-calendar-4"></i>Calendario de Retiros</h1>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="icon"><i class="icon20 i-calendar-3"></i></div>
                            <h4>Editar Evento de Retiro</h4>
                            <a href="#" class="minimize"></a>

                        </div>
                        <!-- End .panel-heading -->

                        <div class="panel-body">

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
                                <tr>
                                    <td style="width: 5%;">@Html.Label("Cliente", new { @class = "control-label" })</td>
                                    <td style="width: 16.8%;">
                                        @Html.TextBoxFor(model => model.Cg_Cli, new { @class = "form-control", @readonly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.Nombre_Cliente, new { @class = "form-control", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Pedido", new { @class = "control-label" })</td>
                                    <td colspan="2">@Html.TextBoxFor(model => model.Id, new { @class = "col-lg-2", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Fecha", new { @class = "control-label" })</td>
                                    <td colspan="2">
                                        <div style="display: -webkit-box;">@Html.TextBoxFor(model => model.Fe_Retiro, new { @class = "col-lg-2 datepicker", @type = "datetime", @autocomplete = "off" })</div>
                                        <div>@Html.ValidationMessage("FechaRetiroError")</div>
                                    </td>
                                </tr>
                            </table>

                            <br />

                            <div class="form-group relative">
                                <button id="btnAceptar" type="submit" class="btn btn-success pull-right col-lg-2">Aceptar</button>
                                <a id="btnEliminar" href="@Url.Action("Delete", "CalendarioRetiro", new { Id = Model.Id })"
                                    class="btn btn-danger pull-right col-lg-3 confirm" style="margin-left: 0.3%; margin-right: 0.3%;">Eliminar Evento</a>
                                <a id="btnCancelar" href="@Url.Action("Index", "CalendarioRetiro")" class="btn btn-default pull-right col-lg-2">Cancelar</a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
}

<script type="text/javascript">

</script>
