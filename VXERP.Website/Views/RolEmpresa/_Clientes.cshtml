@model  CRM.Business.Views.vClientes

<div class="modal-dialog" role="document" style="display:inline">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Clientes</h4>
            </div>
            <div class="modal-body">

                <link href="~/Css/custom.css" rel="stylesheet" />

                <script type="text/javascript">
                    var selectedIDs;
                    function OnBeginCallback(s, e) {
                        e.customArgs["selectedIDs"] = selectedIDs;
                    }
                    function OnSelectionChanged(s, e) {
                        $("#selectedClientes").val(s.GetSelectedKeysOnPage());
                    }
                    
                    function OnClick(s, e) {
                        alert(selectedIDs);
                    }
                    function OnSubmitClick(s, e) {
                        $("#selectedClientes").val(selectedIDs);
                    }
                </script>

                @Html.Partial("_GridViewClientes", Model)

                @if (Model == null || !(Model.Datos.Rows.Count > 0))
                {
                    <p style="text-align: center; font-weight: bold; margin: 0;">No hay Clientes disponibles</p>
                }
            </div>
            <div class="modal-footer">
                @if (Model == null || !(Model.Datos.Rows.Count > 0))
                { 
                    <button class="btn btn-primary pull-right col-lg-5" data-dismiss="modal" aria-hidden="true">Cerrar</button>
                }
                else
                {
                    <button id="btnSubmitClientes" name="btnClientes" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                }
            </div>
        </div>
</div>