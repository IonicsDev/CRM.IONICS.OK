@model CRM.Website.Models.RolEmpresaViewModel

@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
  <div class="wrapper">

     <div class="container-fluid">
                    <div id="heading" class="page-header">
                        <h1><i class="icon20 i-cogs"></i> Configuración</h1>
                    </div>

                    <div class="row">

                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="icon"><i class="icon20 i-table"></i></div> 
                                <h4>Edición Usuario</h4>
                                <a href="#" class="minimize"></a>

                                   
                            </div><!-- End .panel-heading -->
                            <div class="panel-body">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="@Url.Action("Index", "RolEmpresa")">← Volver</a>
                                    </li>
                                 </ul>
                                @Html.ValidationSummary(true)

                                   @Html.HiddenFor(model => model.Usuario.Id, new {@id="Usuario_Id" })
                                   @Html.HiddenFor(model => model.Id, new { @idRolEmpresa = "idRolEmpresa" })
                                   
                                    
                                   <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" >
       
                                    <tr>
                                        <td>Usuario:</td>
                                        <td> <label>@Model.UserName</label> </td>
                                    </tr>
                                </table>
                                

                                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover"   >
                                    <tr>
                                         <td>Seleccione el Rol:</td>
                                       
                                        <td>@Html.DropDownList("Rol_Id","Seleccione") </td>
                                        
                                    </tr>
                                    <tr>
                                        <td colspan="2">Seleccione a que Empresas, Grupos, Divisiones o Sucursales Aplica el Rol seleccionado:</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                                @Html.Raw(ViewBag.GruposEmpresasTree)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="form-group relative">
                                             <button id="SubmitBtn" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            </div>
                        </div>
                        </div>
         </div>
      </div>


}
