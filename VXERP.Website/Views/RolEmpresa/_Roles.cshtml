@model List<CRM.Business.Entities.Rol>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Roles</h4>
        </div>
        <div class="modal-body">

            <link href="~/Css/custom.css" rel="stylesheet" />

            <script type="text/javascript">
                var selectedIDs;
                function OnBeginCallback(s, e) {
                    e.customArgs["selectedIDs"] = selectedIDs;
                }
                function OnSelectionChanged(s, e) {
                    $("#selectedModalRoles").val(s.GetSelectedKeysOnPage());
                }
                function OnClick(s, e) {
                    alert(selectedIDs);
                }
                function OnSubmitClick(s, e) {
                    $("#selectedModalRoles").val(selectedIDs);
                }
            </script>
            @Html.Partial("_GridViewModalRoles", Model)

            @if (Model == null || !(Model.Count > 0))
            {
                <p style="text-align: center; font-weight: bold; margin: 0;">No hay Roles disponibles</p>
            }
        </div>
        <div class="modal-footer">
            @if (Model != null && Model.Count > 0)
            {
                <button id="SubmitBtn" name="btnRoles" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
            }
            else
            {
                <button class="btn btn-primary pull-right col-lg-5" data-dismiss="modal" aria-hidden="true">Cerrar</button>
            }
        </div>
    </div>
</div>
