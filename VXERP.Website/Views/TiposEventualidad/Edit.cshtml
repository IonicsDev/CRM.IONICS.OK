@model CRM.Business.Entities.TipoEventualidad
@using GridMvc.Html;
@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm("Edit","TiposEventualidad",FormMethod.Post))
{
    @Html.AntiForgeryToken()
 
    <div class="wrapper">

        <div class="container-fluid">
            <div id="heading" class="page-header">
                <h1><i class="icon20 i-cogs"></i>Configuración</h1>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="icon"><i class="icon20 i-table"></i></div>
                            <h4>Edición de Tipo de Eventualidad</h4>
                            <a href="#" class="minimize"></a>


                        </div>
                        <!-- End .panel-heading -->
                        <div class="panel-body">
                            <ul class="pager">
                                <li class="previous">
                                    <a href="@Url.Action("Index", "TiposEventualidad")">← Volver</a>
                                </li>
                            </ul>
                            @Html.ValidationSummary(true)

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                                <tr>
                                    <td>@Html.LabelFor(model => model.Id, "ID", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.Id)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 20%;">@Html.LabelFor(model => model.Descripcion, "Nombre Tipo Eventualidad", new { @class = "control-label" })</td>
                                    <td>@Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @maxlength = 50 })
                                        @Html.ValidationMessageFor(model => model.Descripcion)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.DescripcionEstado, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.DescripcionEstado)
                                        @Html.HiddenFor(model => model.Estado)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.FechaCreacion, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.FechaCreacion)
                                        @Html.HiddenFor(model => model.FechaCreacion)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.FechaActualizacion, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.FechaActualizacion)
                                        @Html.HiddenFor(model => model.FechaActualizacion)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Usuario Última Modificación", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.Usuario.UserName)
                                        @Html.HiddenFor(model => model.idUsuario)
                                    </td>
                                </tr>
                            </table>
                            
                            <br />
                            <p>@Html.ActionLink("Crear +", "Create", "SubTipoEventualidad", new { TipoEventualidad_Id = Model.Id }, new { @class = "btn btn-info" })</p>

                            @using (Html.BeginForm("ExportXLS", "TiposEventualidad", FormMethod.Post))
                            {
                                <link href="~/Css/custom.css" rel="stylesheet" />
                                <script src="~/Scripts/clientGridFunctions.js"></script>
                            
                                @*@Html.Partial("_GridExportOptionsPartial", Model)*@
                                @Html.Partial("_GridViewSubTipos", Model.SubTiposEventualidad)
                            }

                            <br />
                            <div class="form-group relative">
                                <button id="SubmitBtn" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
    @section scripts
    {
        
    }
}
