@model CRM.Business.Entities.NoConformidad
@using GridMvc.Html;
@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm("View","NoConformidadDos",FormMethod.Post))
{
    @Html.AntiForgeryToken()
 
    <div class="wrapper">

        <div class="container-fluid">
            <div id="heading" class="page-header">
                <h1><i class="icon20 i-cogs"></i>Configuración</h1>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="icon"><i class="icon20 i-table"></i></div>
                            <h4>Información de la No Conformidad</h4>
                            <a href="#" class="minimize"></a>


                        </div>
                        <!-- End .panel-heading -->
                        <div class="panel-body">
                            <ul class="pager">
                                <li class="previous">
                                    <a href="@Url.Action("Index", "NoConformidadDos")">← Volver</a>
                                    <button type="submit" class="btn btn-primary col-lg-2" style="float:right;" id="btnImpAceptar" name="btnImpAceptar" href="@Url.Action("Imprimir", "NoConformidadDos")">Imprimir</button>
                                </li>
                            </ul>
                            @Html.ValidationSummary(true)

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.Numero, new { @class = "control-label" })
                                    </td>
                                    <td colspan="3">
                                        <div class="input-group" style="width:100%;">
                                            @Html.DisplayFor(model => model.Numero)
                                            @Html.HiddenFor(model => model.Numero, new { @class = "control-label" })
                                        </div><!-- /input-group -->
                                    </td>
                                </tr>
                                <tr style="width: 100%;">
                                    <td style="width: 10%;">
                                        @Html.LabelFor(model => model.IDTipo, new { @class = "control-label" })
                                    </td>
                                    <td style="width: 30%;">
                                        <div class="input-group" style="width:100%;">
                                            @Html.DropDownListFor(model => model.IDTipo, new SelectList(ViewBag.TiposEventualidad, "Id", "Descripcion"), "Seleccione")
                                        </div><!-- /input-group -->
                                    </td>
                                    <td style="width: 10%;">
                                        @Html.LabelFor(model => model.FechaOcurrencia, new { @class = "control-label" })
                                    </td>
                                    <td style="width: 30%;">
                                        @Html.DisplayFor(model => model.FechaOcurrencia)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.FechaApertura, new { @class = "control-label" })</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.FechaApertura)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.IDOrigen, new { @class = "control-label" })</td>
                                    <td>
                                        @Html.DropDownListFor(model => model.IDOrigen, new SelectList(ViewBag.Origen, "Id", "Descripcion"), "Seleccione")
                                    </td>
                                    <td>@Html.LabelFor(model => model.Identificacion, new { @class = "control-label" })</td>
                                    <td>
                                        @Html.DropDownListFor(model => model.Identificacion, new SelectList(ViewBag.Identificacion, "Id", "Descripcion"), "Seleccione")
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.Observaciones, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.AccionInmediata, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.AccionInmediata, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                     <tr>
                                    <td>Usuario Alta:</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.Usuario.NombreApellido)
                                    </td>
                                </tr>
                            </table>

                            <br />

                            @{Html.RenderPartial("_ListArchivos", Model.ArchivosModulo);}

                        </div>
                        <button type="submit" class="btn btn-primary col-lg-2" style="float:right;" id="btnImpAceptar" name="btnImpAceptar" onclick="$('#imprimirModal-container').modal('hide');">Imprimir</button>
                    </div>
                    
                </div>
                
            </div>
        </div>
    </div>
    
    @section scripts
    {
        <script type="text/javascript">

        </script>
    }
}
