@model CRM.Business.Entities.Eventualidad
@using GridMvc.Html;
@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm("View","Eventualidad",FormMethod.Post))
{
    @Html.AntiForgeryToken()
 
    <div class="wrapper">

        <div class="container-fluid">
            <div id="heading" class="page-header">
                <h1><i class="icon20 i-cogs"></i>Configuración</h1>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="icon"><i class="icon20 i-table"></i></div>
                            <h4>Información de la Eventualidad</h4>
                            <a href="#" class="minimize"></a>


                        </div>
                        <!-- End .panel-heading -->
                        <div class="panel-body">
                            <ul class="pager">
                                <li class="previous">
                                    <a href="@Url.Action("Index", "Eventualidad")">← Volver</a>
                                    <button type="submit" class="btn btn-primary col-lg-2" style="float:right;" id="btnImpAceptar" name="btnImpAceptar" href="@Url.Action("Imprimir", "Eventualidad")">Imprimir</button>
                                </li>
                            </ul>
                            @Html.ValidationSummary(true)

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.Nombre_Cliente, new { @class = "control-label" })
                                    </td>
                                    <td colspan="3">
                                        <div class="input-group" style="width:100%;">
                                            @Html.DisplayFor(model => model.Nombre_Cliente)
                                            @Html.HiddenFor(model => model.Cg_Clie, new { @class = "control-label" })
                                        </div><!-- /input-group -->
                                    </td>
                                </tr>
                                <tr style="width: 100%;">
                                    <td style="width: 10%;">
                                        @Html.LabelFor(model => model.Pedido_Id, new { @class = "control-label" })
                                    </td>
                                    <td style="width: 30%;">
                                        <div class="input-group" style="width:100%;">
                                            @Html.DisplayFor(model => model.Pedido_Id)
                                        </div><!-- /input-group -->
                                    </td>
                                    <td style="width: 10%;">
                                        @Html.LabelFor(model => model.Remito, new { @class = "control-label" })
                                    </td>
                                    <td style="width: 30%;">
                                        @Html.DisplayFor(model => model.Remito)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.NombreProducto, new { @class = "control-label" })</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.NombreProducto)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.OrdenFabricacion, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.OrdenFabricacion)
                                    </td>
                                    <td>@Html.LabelFor(model => model.LoteCliente, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.LoteCliente)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.FechaOcurrencia, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.FechaOcurrencia)
                                    </td>
                                    <td>@Html.LabelFor(model => model.FechaApertura, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.FechaApertura)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.TipoEventualidad_Id, new { @class = "control-label" })</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.SubTipoEventualidad.NombreTipoEventualidad)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.SubTipoEventualidad_Id, new { @class = "control-label" })</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.SubTipoEventualidad.Descripcion)
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.Observaciones, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.Causas, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Causas, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.LabelFor(model => model.AccionesInmediatas, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.AccionesInmediatas, new { @class = "form-control", @style = "resize: vertical;", @readonly = "readonly" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        @Html.Label("Notificar a las siguientes personas:", new { @class = "control-label" })

                                        <div class="input-group" style="width:100%; padding-bottom: 15px;">
                                            @Html.HiddenFor(model => model.NotificarUsuarios_Id)
                                            @Html.TextBoxFor(model => model.NotificarUsuarios, new { @readonly = "readonly", @class = "form-control" })
                                        </div><!-- /input-group -->

                                        <div class="input-group" style="width:100%;">
                                            @Html.HiddenFor(model => model.NotificarContactos_Id)
                                            @Html.TextBoxFor(model => model.NotificarContactos, new { @readonly = "readonly", @class = "form-control" })
                                        </div><!-- /input-group -->
                                    </td>
                                </tr>
                                     <tr>
                                    <td>Usuario Alta:</td>
                                    <td colspan="3">
                                        @Html.DisplayFor(model => model.Usuario.NombreApellido)
                                    </td>
                                </tr>
                            </table>

                            <br />

                            @{Html.RenderPartial("_ListArchivos", Model.ArchivosModulo);}

                        </div>
                        <button type="submit" class="btn btn-primary col-lg-2" style="float:right;" id="btnImpAceptar" name="btnImpAceptar" onclick="$('#imprimirModal-container').modal('hide');">Imprimir</button>
                    </div>
                    
                </div>
                
            </div>
        </div>
    </div>
    
    @section scripts
    {
        <script type="text/javascript">

        </script>
    }
}
