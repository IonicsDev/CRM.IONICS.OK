@model CRM.Business.Entities.Rol
@using GridMvc.Html;
@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
 
  <div class="wrapper">

     <div class="container-fluid">
                    <div id="heading" class="page-header">
                        <h1><i class="icon20 i-cogs"></i> Configuración</h1>
                    </div>

                    <div class="row">

                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="icon"><i class="icon20 i-table"></i></div> 
                                <h4>Edición Rol</h4>
                                <a href="#" class="minimize"></a>

                                   
                            </div><!-- End .panel-heading -->
                            <div class="panel-body">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="@Url.Action("Index", "Rol")">← Volver</a>
                                    </li>
                                 </ul>
                                 @Html.ValidationSummary(true)
                                 @Html.HiddenFor(model => model.Id)
                                 @Html.HiddenFor(model => model.Estado)
                                 @Html.HiddenFor(model => model.FechaCreacion)
                                 @Html.HiddenFor(model => model.FechaActualizacion)
                                 @Html.HiddenFor(model => model.idUsuario)
                               
                             
                                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" >
                                    <tr>
                                        <td>  @Html.LabelFor(model => model.RoleName, new { @class = "control-label" })</td>
                                        <td>  @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" }) 
                                              @Html.ValidationMessageFor(model => model.RoleName)
                                        </td>
                                    </tr>
                                    <tr class="success">
                                        <td colspan="2" > <label class="control-label" >Modulos - Acciones del Rol: </label> </td>
                                        
                                    </tr>
                                    <tr class="info">

                                        <td colspan="2">
                                            <ul style='list-style:none;'><li><label class="control-label" style='float:right;margin-right: 315px;'>VER</label><label class="control-label" style='float:right;margin-right: -230px;'>MODIFICAR</label><div style='width:100%;'>
                                           
                                            @Html.Raw(ViewBag.Modulos)
                                             </div>
                                              </li>
                                            </ul>
                                           
                                        </td> 
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="form-group relative">
                                             <button id="SubmitBtn" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            </div>
                        </div>
                        </div>
         </div>
      </div>
    @section scripts
{
    
        
   
}

}
