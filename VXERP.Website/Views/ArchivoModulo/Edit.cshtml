@model CRM.Business.Entities.ArchivoModulo

@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken() 
    <div class="wrapper">
        <div class="container-fluid">
            <div id="heading" class="page-header">
                <h1><i class="icon20 i-cogs"></i>Configuración</h1>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="icon"><i class="icon20 i-table"></i></div>
                            <h4>Edición Archivo</h4>
                            <a href="#" class="minimize"></a>

                        </div>
                        <!-- End .panel-heading -->
                        <div class="panel-body">
                            <ul class="pager">
                                <li class="previous">
                                    <a href="@Url.Action("Index", "ArchivoModulo")">← Volver</a>
                                </li>
                            </ul>
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.Estado)
                            @Html.HiddenFor(model => model.FechaCreacion)
                            @Html.HiddenFor(model => model.FechaActualizacion)
                            @Html.HiddenFor(model => model.idUsuario)
                            @Html.HiddenFor(model => model.DescripcionCorta)
                            @Html.HiddenFor(model => model.Path)
                            @Html.HiddenFor(model => model.TipoArchivoModulo)
                            @Html.HiddenFor(model => model.TipoArchivoModulo_Id)
                            @Html.HiddenFor(model => model.DescripcionEstado)
                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" id="dataTable1">
                                <tr>
                                    <td>@Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })</td>
                                    <td>@Html.EditorFor(model => model.Descripcion, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Descripcion)
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.DescripcionCorta, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.DescripcionCorta, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DescripcionCorta)
                                    </td>
                                </tr>

                                <tr>
                                    <td>@Html.LabelFor(model => model.TipoArchivoModulo_Id, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.TipoArchivoModulo.Tipo, new { @class = "form-control" })</td>
                                </tr>

                                <tr>
                                    <td>@Html.LabelFor(model => model.DescripcionEstado, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.DescripcionEstado, new { @class = "form-control" })</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Usuario.UserName, new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(model => model.Usuario.UserName, new { @class = "form-control" })  - @Html.LabelFor(model => model.FechaActualizacion, new { @class = "control-label" }) :  @Html.DisplayFor(model => model.FechaActualizacion, new { @class = "form-control" })</td>

                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <div class="form-group relative">
                                            <button id="SubmitBtn" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
