@model CRM.Business.Entities.ArchivoModulo

@{
    Layout = "~/Views/Shared/_Generic.cshtml";
}
@using (Html.BeginForm("Create", "ArchivoModulo", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
  <div class="wrapper">

     <div class="container-fluid">
                    <div id="heading" class="page-header">
                        <h1><i class="icon20 i-cogs"></i> Configuración</h1>
                    </div>

                    <div class="row">

                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="icon"><i class="icon20 i-table"></i></div> 
                                <h4>Nuevo ArchivoModulo</h4>
                                <a href="#" class="minimize"></a>

                                   
                            </div><!-- End .panel-heading -->
                            <div class="panel-body">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="@Url.Action("Index", "ArchivoModulo")">← Volver</a>
                                    </li>
                                 </ul>
                                 @Html.ValidationSummary(true)
                             
                                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" id="dataTable1">
                                    <tr>
                                        <td>  @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })</td>
                                        <td>  @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" }) 
                                              @Html.ValidationMessageFor(model => model.Descripcion)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>  @Html.LabelFor(model => model.DescripcionCorta, new { @class = "control-label" })</td>
                                        <td>  @Html.TextBoxFor(model => model.DescripcionCorta, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.DescripcionCorta)
                                        </td>
                                    </tr>
                                   
                                    <tr>
                                        <td>  @Html.LabelFor(model => model.Path, new { @class = "control-label" })</td>
                                        <td>
                                                <input type="file" name="file" />
                                                @*@Html.TextBoxFor(model => model.Path, new { @class = "form-control", @type = "file", @Name = "file"})*@
                                                @Html.ValidationMessage("PathError")
                                        </td>
                                    </tr>

                                     <tr>
                                        <td>  @Html.LabelFor(model => model.TipoArchivoModulo_Id, new { @class = "control-label" })</td>
                                        <td>
                                        
                                              @Html.DropDownList("TipoArchivoModulo_Id", "Seleccione") 
                                         
                                               @Html.ValidationMessageFor(model => model.TipoArchivoModulo_Id)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="form-group relative">
                                             <button id="SubmitBtn" type="submit" class="btn btn-primary pull-right col-lg-5">Guardar</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            </div>
                        </div>
                        </div>
         </div>
      </div>
    
 @section scripts
{
    <script type="text/javascript">
        
    </script>
}

}
